{
  "name": "base",
  "version": "0.0.1",
  "description": "Base theme by Xotiny.",
  "author": "Neo Khuat",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p clean internal theme:serve webpack:watch",
    "build": "npm-run-all webpack:prd",
    "build:dev": "npm-run-all webpack:dev",
    "deploy": "npm-run-all webpack:prd push",
    "deploy:dev": "npm-run-all webpack:dev push:dev",
    "cheat": "opener https://www.shopify.com/partners/shopify-cheat-sheet",
    "clean": "rimraf --glob ./shopify/*",
    "clean:unused": "rimraf ./shopify/.gitignore",
    "lint": "npm-run-all eslint checkTypes stylelint checkLicense theme:check",
    "lint:fix": "npm-run-all eslint:fix stylelint:fix format theme:check",
    "format": "prettier --write --plugin-search-dir=. 'src/**/*.{js,ts}'",
    "eslint": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint --fix 'src/**/*.{ts}'",
    "checkTypes": "tsc --noEmit",
    "checkLicense": "license-checker --production",
    "postInstall": "typesync",
    "internal": "tsc --watch --project tsconfig.internal.json",
    "webpack:watch": "cross-env NODE_ENV=development webpack --watch",
    "webpack:dev": "cross-env NODE_ENV=development webpack",
    "webpack:prd": "cross-env NODE_ENV=production webpack --config webpack.prd.js",
    "newTheme": "npm-run-all theme:init clean:unused",
    "pull": "shopify theme pull -n --path=shopify --store=xo-base.myshopify.com",
    "pull2": "shopify theme pull -n --path=shopify --store=xo-base-grow.myshopify.com",
    "pull3": "shopify theme pull -n --path=shopify --store=xo-base-totorico.myshopify.com",
    "pull:new": "mkdir shopify && shopify theme pull --path=shopify --store=xo-base.myshopify.com",
    "pull:dev": "shopify theme pull -d --path=shopify --store=xo-base.myshopify.com",
    "push": "shopify theme push -n --path=shopify --store=xo-base.myshopify.com",
    "push2": "shopify theme push -n --path=shopify --store=xo-base-grow.myshopify.com",
    "push3": "shopify theme push -n --path=shopify --store=xo-base-totorico.myshopify.com",
    "push:dev": "shopify theme push -d --path=shopify --store=xo-base.myshopify.com",
    "push:upload": "shopify theme push -u --path=shopify --store=xo-base.myshopify.com",
    "share": "shopify theme share --path=shopify --store=xo-base.myshopify.com",
    "package": "npm-run-all theme:package",
    "preview": "shopify theme open",
    "theme:init": "shopify theme init shopify --store=xo-base.myshopify.com",
    "theme:serve": "shopify theme dev --path=shopify --store=hoi-store-2.myshopify.com",
    "theme:list": "shopify theme list",
    "theme:package": "shopify theme package --path=shopify",
    "theme:check": "shopify theme check --path=shopify"
  },
  "devDependencies": {
    "@types/license-checker": "^25.0.3",
    "@types/opener": "^1.4.0",
    "@types/prettier": "^2.4.4",
    "@types/rimraf": "^3.0.2",
    "@types/write-file-webpack-plugin": "^4.5.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@xo/theme": "workspace:*",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.0",
    "dotenv": "^16.0.0",
    "eslint-config-custom": "workspace:*",
    "glob-import-loader": "^1.2.0",
    "license-checker": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "rimraf": "^5.0.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "ts-node": "^10.7.0",
    "typescript": "4.5.5",
    "typesync": "^0.8.0",
    "webpack": "^5.70.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@shopify/theme-predictive-search-component": "^4.1.1",
    "@xo/utils": "workspace:*",
    "@xo/plugins": "workspace:*",
    "@xo/webcomponents": "workspace:*",
    "basehtml": "workspace:*"
  }
}
