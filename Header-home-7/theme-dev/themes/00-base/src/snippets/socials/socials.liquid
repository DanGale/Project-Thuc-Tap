{% comment %}
  Renders a list of social links based on the social links set in the theme settings.

  Accepts:
  - list: {String} A list of social media sites to include
  - tooltip_placement: {String} The placement of the tooltip

  Usage:
  {% render 'socials' %}
{% endcomment %}

{% liquid
  if list == null
    assign list = 'facebook, twitter, pinterest, instagram, tiktok, tumblr, snapchat, youtube, vimeo'
  endif
  if tooltip_placement == null
    assign tooltip_placement = 'top-center'
  endif
  assign items = list | split: ','
%}

<div class='xo-socials'>
  {% for item in items %}
    {% assign temp = item | strip %}

    {% case temp %}
      {% when 'twitter' %}
        {%- if settings.social_twitter_link != blank -%}
          <xo-tooltip xo-title='{{ 'general.social.links.twitter' | t }}' xo-placement='{{ tooltip_placement }}'>
            <a
              href='{{ settings.social_twitter_link }}'
              target='_blank'
              class='xo-socials__link'
              aria-label='{{ 'general.social.links.twitter' | t }}'
            >
              {% render 'icon', name: 'twitter' %}
            </a>
          </xo-tooltip>
        {%- endif -%}

      {% when 'facebook' %}
